	FogStart = OriginalLighting.FogStart, -- UPDATED: Default to original
    Brightness = OriginalLighting.Brightness, -- NEW
    Exposure = OriginalLighting.Exposure, -- NEW
	Walkspeed = 16,
	WalkspeedOverride = false, 
}


